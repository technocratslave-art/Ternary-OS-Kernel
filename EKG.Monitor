This tool uses matplotlib to graph the Determinism of your system.
import serial
import matplotlib.pyplot as plt
import time

# Connect to the Ternary-OS Debug Port
ser = serial.Serial('/dev/ttyUSB0', 115200)
plt.style.use('dark_background')

times = []
latencies = []

print("üî¥ Monitoring TERNARY-OS Pulse... [CTRL+C to stop]")

start_time = time.time()

try:
    while True:
        line = ser.readline().decode('utf-8').strip()
        
        # Capture the 120Hz Media Pulse
        if "BAY-0 HEARTBEAT" in line:
            current_time = time.time() - start_time
            times.append(current_time)
            # Ideal latency should be exactly 0.00833s (120Hz)
            latencies.append(current_time % 0.00833)
            
            # Plotting logic
            plt.clf()
            plt.plot(times[-50:], latencies[-50:], color='#00d4ff', linewidth=2)
            plt.title("RAIL-2: Sovereignty Pulse (120Hz)")
            plt.ylabel("Jitter (ms)")
            plt.pause(0.01)

        # Log the Vaporization Event
        if "VAPORIZE" in line:
            print(f"‚ö° [500ms HINGE] Rail-3 reset detected at {time.time()-start_time:.2f}s")

except KeyboardInterrupt:
    print("Stopping monitor.")

